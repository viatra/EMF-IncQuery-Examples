<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="school.presentation.SchoolModelWizardID"
            name="%_UI_SchoolModelWizard_label"
            class="school.presentation.SchoolModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/SchoolModelFile.gif">
         <description>%_UI_SchoolModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="school.presentation.SchoolEditorID"
            name="%_UI_SchoolEditor_label"
            icon="icons/full/obj16/SchoolModelFile.gif"
            extensions="school"
            class="school.presentation.SchoolEditor"
            contributorClass="school.presentation.SchoolActionBarContributor">
      </editor>
   </extension>

</plugin>
